# MongoDB Connection
MONGODB_URI=mongodb://mongo:27017/karmachain
DATABASE_NAME=karmachain

# Security
SECRET_KEY=your-secret-key-here
DEBUG=false

# Logging
LOG_LEVEL=info

# Q-Learning Parameters
ALPHA=0.15
GAMMA=0.9
EPSILON=0.2

# Token System Thresholds
PAAP_MINOR_THRESHOLD=10
PAAP_MEDIUM_THRESHOLD=50
PAAP_MAHA_THRESHOLD=100

# Appeal System
APPEAL_WINDOW_HOURS=24
MAX_APPEALS_PER_ACTION=1

# Atonement System
ATONEMENT_TIMEOUT_DAYS=7
MAX_ATONEMENT_EXTENSIONS=2

# Death/Rebirth System
REBIRTH_COOLDOWN_HOURS=24
LOKA_CALCULATION_INTERVAL=3600

# Unified Event System Configuration
MAX_FILE_SIZE=1048576  # 1MB maximum file upload size
EVENT_RETENTION_DAYS=90  # Keep events for 90 days
EVENT_CLEANUP_INTERVAL=86400  # Daily cleanup interval in seconds
EVENT_BATCH_SIZE=1000  # Batch processing size for event cleanup

# File Upload Configuration
UPLOAD_DIR=/app/uploads  # Directory for temporary file uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,txt  # Allowed file extensions
FILE_UPLOAD_TIMEOUT=30  # File upload timeout in seconds

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_RATE_LIMIT=1000
API_TIMEOUT_SECONDS=30

# Production Settings (uncomment for production)
# MONGODB_URI=mongodb+srv://username:password@your-cluster-url/
# DEBUG=false
# LOG_LEVEL=warning
# EVENT_RETENTION_DAYS=365  # Keep events for 1 year in production
# MAX_FILE_SIZE=5242880  # 5MB for production file uploads
# API_RATE_LIMIT=10000  # Higher rate limit for production